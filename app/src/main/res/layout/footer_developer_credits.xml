<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/unacademy_light_bg"
    android:padding="20dp"
    android:gravity="center">

    <View
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="@color/unacademy_light_gray"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Built with ❤️ by"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/unacademy_light_gray"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parikshit Singh"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/unacademy_primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Call v1.0 • Simple Attendance Management"
        android:textSize="10sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/unacademy_light_gray"
        android:textAlignment="center" />

</LinearLayout>
