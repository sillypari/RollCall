<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/unacademy_white"
    android:fitsSystemWindows="true"
    tools:context=".CreateClassActivity">

    <!-- Custom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/unacademy_white"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/backButton"
                android:layout_marginStart="16dp"
                android:text="Create Class"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/unacademy_dark_gray" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Class"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"
                android:textColor="@color/unacademy_dark_gray" />

            <!-- Branch Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/unacademy_primary"
                app:boxBackgroundColor="@color/unacademy_white"
                app:hintTextColor="@color/unacademy_primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/branchInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Branch (e.g., Computer Science)"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/unacademy_dark_gray"
                    android:textColorHint="@color/unacademy_light_gray"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Subject Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/unacademy_primary"
                app:boxBackgroundColor="@color/unacademy_white"
                app:hintTextColor="@color/unacademy_primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/subjectInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Subject (e.g., Mathematics, Physics)"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/unacademy_dark_gray"
                    android:textColorHint="@color/unacademy_light_gray"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Semester Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/unacademy_primary"
                app:boxBackgroundColor="@color/unacademy_white"
                app:hintTextColor="@color/unacademy_primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/semesterInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Semester (e.g., 1st, 2nd, 3rd)"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/unacademy_dark_gray"
                    android:textColorHint="@color/unacademy_light_gray"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Section Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/unacademy_primary"
                app:boxBackgroundColor="@color/unacademy_white"
                app:hintTextColor="@color/unacademy_primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sectionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Section (e.g., A, B, C)"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/unacademy_dark_gray"
                    android:textColorHint="@color/unacademy_light_gray"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Import Students Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/unacademy_light_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Import Students (Optional)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/unacademy_dark_gray"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/selectCSVButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select CSV File"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/unacademy_primary"
                            android:textColor="@color/unacademy_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/formatInfoButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="?"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_medium"
                            android:minWidth="48dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/unacademy_primary"
                            android:textColor="@color/unacademy_primary" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/selectedFileText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="File selected: students.csv"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/unacademy_primary"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Note: You can add students later or manually if no CSV file is selected."
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/unacademy_light_gray" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Create Class Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveClassButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create Class"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                android:backgroundTint="@color/unacademy_primary"
                android:elevation="2dp"
                app:cornerRadius="12dp"
                app:rippleColor="@color/unacademy_light_green" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>