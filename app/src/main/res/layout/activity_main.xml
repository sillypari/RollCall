<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- Custom Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/unacademy_green"
        android:orientation="vertical"
        android:paddingBottom="24dp">
        
        <!-- Status bar padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        
        <!-- Top row: Theme Switch (left) and Icons (right) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">
            
            <!-- Theme toggle removed -->
            
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
            
            <!-- Icons column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                
                
                
                <ImageButton
                    android:id="@+id/settingsButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="Settings"
                    app:tint="@android:color/white"
                    android:padding="10dp" />
                
                <ImageButton
                    android:id="@+id/historyButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_history"
                    android:contentDescription="@string/attendance_history"
                    app:tint="@android:color/white"
                    android:padding="10dp" />
            </LinearLayout>
            
        </LinearLayout>

        <!-- Header with title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.RollCall.ToolbarTitle" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message"
                android:textAppearance="@style/TextAppearance.RollCall.ToolbarSubtitle"
                android:layout_marginTop="4dp" />
            
        </LinearLayout>
        
        
        
    </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

        <!-- Classes Section Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Classes"
            android:textAppearance="@style/TextAppearance.RollCall.Headline2"
            android:layout_marginBottom="16dp" />

        <!-- Classes RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/classesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            tools:listitem="@layout/item_class" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_rollcall_foreground"
                android:layout_marginBottom="24dp"
                app:tint="@color/text_tertiary" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No classes yet"
                android:textAppearance="@style/TextAppearance.RollCall.Headline2"
                android:layout_marginBottom="8dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap the + button to create your first class"
                android:textAppearance="@style/TextAppearance.RollCall.Body2"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />
            
        </LinearLayout>

        <!-- Developer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developer_info"
                android:textAppearance="@style/TextAppearance.RollCall.Caption"
                android:layout_marginBottom="4dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textAppearance="@style/TextAppearance.RollCall.Caption" />
                
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Pill-shaped Add Class Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/pill_shape_ripple"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        android:id="@+id/addClassButton"
        android:clickable="true"
        android:focusable="true">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Class"
            android:textSize="16sp"
            android:textColor="@android:color/white" />
            
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
